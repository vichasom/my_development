            echo $block->getActions($_item) ?>
        </td>

        <!-- product image -->
        <td class="cart-table-image">
            <?php if ($block->hasProductUrl()): ?>
            <a href="<?php /* @escapeNotVerified */
            echo $block->getProductUrl() ?>"
               title="<?php echo $block->escapeHtml($block->getProductName()) ?>"
               tabindex="-1">
