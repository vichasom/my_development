                            $artwork_top = $artwork_top . "%";
                        }
                        if (empty($artwork_multiply)) {
                            $artwork_multiply = 'brightness(120%)';
                        } else {
                            $artwork_multiply = "brightness(" . $artwork_multiply . "%)";
                        }

                        ?>
                        <div class="cart-sticker" style="left: <?php echo $artwork_left; ?>;right: <?php echo $artwork_right; ?>; top: <?php echo $artwork_top; ?>; filter: <?php echo $artwork_multiply; ?>; -webkit-filter: <?php echo $artwork_multiply; ?>;">
                            <?php
                            if ($_sticker):
                                ?>
                                <img src="<?php echo $_media_path . 'catalog/product' . $_sticker; ?>" alt="sticker"/>
