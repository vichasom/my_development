            <!--  product edit option  -->
            <div class="cart-description-anchor">
                <?php
                $_editUrl = $this->getUrl(
                    'checkout/cart/configure',
                    [
                        'id' => $_item->getId(),
                        'product_id' => $_item->getProduct()->getId()
                    ]
                );
                ?>
                <a href="<?php echo $_editUrl; ?>">edit options</a>
            </div>
