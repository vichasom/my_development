                        if (empty($artwork_left)) {
                            $artwork_left = '21%';
                        } else {
                            $artwork_left = $artwork_left . "%";
                        }

                        if (empty($artwork_right)) {
                            $artwork_right = '21%';
                        } else {
                            $artwork_right = $artwork_right . "%";
                        }

                        if (empty($artwork_top)) {
                            $artwork_top = '17%';
